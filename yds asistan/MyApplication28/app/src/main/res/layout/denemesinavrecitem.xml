<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/strokedandrounded"
    android:padding="10dp"
    android:layout_margin="5dp"
    >
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yıl"
            android:layout_weight="1"
            android:textSize="20dp"

            />
        <TextView
            android:id="@+id/denemesinavrecitem_tvYil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2015"
            android:gravity="end"
            android:textSize="20dp"
            />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dönem"
            android:layout_weight="1"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/denemesinavrecitem_tvDonem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Güz"
            android:gravity="end"
            android:textSize="20dp"
            />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:ems="6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Soru Sayısı"
            android:layout_weight="1"
            android:textSize="20dp"
            />
        <TextView
            android:ems="5"
            android:id="@+id/denemesinavrecitem_tvSoruSayisi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="80"
            android:gravity="end"
            android:textSize="20dp"
            />

    </LinearLayout>
</LinearLayout>


</RelativeLayout>