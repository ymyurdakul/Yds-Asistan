<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Kelimeler">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/kelimeler_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorCustomOrange"
        app:title="Kelimeler"
        app:titleTextColor="#fff"
        android:theme="@style/ToolbarTheme"
        >


    </androidx.appcompat.widget.Toolbar>



    <me.ibrahimsn.lib.SmoothBottomBar
        android:layout_below="@id/kelimeler_toolbar"
        android:id="@+id/kelimeler_smoothbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:backgroundColor="@color/colorCustomOrange"
        app:menu="@menu/kelimemenu"/>
<FrameLayout
    android:layout_below="@id/kelimeler_smoothbar"
    android:id="@+id/kelimeler_framelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

</FrameLayout>



</RelativeLayout>